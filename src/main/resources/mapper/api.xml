<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatis.sql">
	<insert id="postCustomers" parameterType="map">
		INSERT INTO customer 
		VALUES(seq_customer.NEXTVAL, #{image}, #{name}, #{birthday}, #{gender}, #{job}, sysdate, 'F')
	</insert>
	<select id="getCustomers" parameterType="map" resultType="map">
		SELECT *
		FROM customer
		WHERE is_deleted = 'F'
	</select>
	<update id="deleteCustomers" parameterType="map">
		UPDATE customer SET is_deleted = 'T'
		WHERE id = #{id}
	</update>
</mapper>